# Customer 360 Demo Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ClickHouse Cloud Configuration
# Get these from your ClickHouse Cloud console
CLICKHOUSE_HOST=abc123.clickhouse.cloud
CLICKHOUSE_PORT=8443
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-secure-password-here
CLICKHOUSE_DATABASE=customer360
CLICKHOUSE_SECURE=true
CLICKHOUSE_VERIFY_CERT=true
CLICKHOUSE_CONNECTION_TIMEOUT=30
CLICKHOUSE_QUERY_TIMEOUT=300

# PuppyGraph Configuration
# These will be set during EC2 deployment
PUPPYGRAPH_HOST=localhost
PUPPYGRAPH_PORT=8081
PUPPYGRAPH_CYPHER_PORT=7687
PUPPYGRAPH_GREMLIN_PORT=8182
PUPPYGRAPH_USERNAME=puppygraph
PUPPYGRAPH_PASSWORD=strong-password-here
PUPPYGRAPH_CONNECTION_TIMEOUT=30

# Data Generation Configuration
# Scale options: 1000000, 10000000, 100000000
CUSTOMER_SCALE=1000000
BATCH_SIZE=10000
PARALLEL_WORKERS=4
USE_SAMPLE_DATA=false
GENERATE_RELATIONSHIPS=true
RELATIONSHIP_DENSITY=0.001  # Percentage of possible relationships to create

# Data Generation Distributions
# Segment distribution (must sum to 1.0)
SEGMENT_VIP_RATIO=0.05
SEGMENT_PREMIUM_RATIO=0.15
SEGMENT_REGULAR_RATIO=0.30
SEGMENT_BASIC_RATIO=0.30
SEGMENT_NEW_RATIO=0.20

# Transaction patterns
TRANSACTIONS_PER_CUSTOMER_MIN=1
TRANSACTIONS_PER_CUSTOMER_MAX=50
TRANSACTION_AMOUNT_MIN=10.00
TRANSACTION_AMOUNT_MAX=5000.00

# Interaction patterns
INTERACTIONS_PER_CUSTOMER_MIN=5
INTERACTIONS_PER_CUSTOMER_MAX=200
VIEW_DURATION_MIN=10
VIEW_DURATION_MAX=1800

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=none
STREAMLIT_SERVER_RUN_ON_SAVE=false
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6

# Performance Configuration
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE_MB=1024
ENABLE_PROFILING=false
MAX_QUERY_RESULTS=10000
ASYNC_QUERY_TIMEOUT=600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/opt/customer360/logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
ENABLE_STRUCTURED_LOGGING=true

# AWS Configuration (for CloudWatch integration)
AWS_REGION=us-west-2
AWS_CLOUDWATCH_LOG_GROUP=/aws/ec2/customer360
ENABLE_CLOUDWATCH_METRICS=true

# Security Configuration
ENABLE_API_AUTHENTICATION=false
API_SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=*

# Development Configuration
DEBUG_MODE=false
ENABLE_DEBUG_QUERIES=false
SHOW_QUERY_METRICS=true
ENABLE_QUERY_EXPLAIN=false

# Feature Flags
ENABLE_FRAUD_DETECTION=true
ENABLE_RECOMMENDATIONS=true
ENABLE_INFLUENCE_ANALYSIS=true
ENABLE_JOURNEY_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=false

# Graph Visualization Settings
MAX_NODES_IN_VISUALIZATION=500
MAX_EDGES_IN_VISUALIZATION=1000
GRAPH_LAYOUT_ALGORITHM=spring
GRAPH_PHYSICS_ENABLED=true