# Customer 360 Demo - Terraform Variables
# Copy to terraform.tfvars and fill in your values

#============================================================================
# AWS Configuration
#============================================================================

# AWS profile for authentication (your local AWS profile name)
aws_profile = "default"

# AWS region for deployment
aws_region = "us-west-2"

#============================================================================
# VPC Configuration - Choose one approach
#============================================================================

# Option 1: Use existing VPC (RECOMMENDED - more cost effective)
use_existing_vpc   = true
existing_vpc_id    = "vpc-xxxxxxxxx"     # Replace with your VPC ID
existing_subnet_id = "subnet-xxxxxxxxx"  # Replace with your public subnet ID

# Option 2: Create new VPC (uncomment below and set use_existing_vpc = false)
# use_existing_vpc = false
# vpc_cidr = "10.0.0.0/16"
# subnet_cidr = "10.0.1.0/24"

#============================================================================
# Required Configuration
#============================================================================

# ClickHouse Cloud credentials (REQUIRED)
clickhouse_host     = "abc123.clickhouse.cloud"  # Your ClickHouse Cloud host
clickhouse_password = "your-secure-password"      # Your ClickHouse password

# Your information (REQUIRED)
owner_email = "your-email@company.com"  # For resource tagging

# Network access (REQUIRED - restrict these IPs in production)
allowed_ssh_ips = ["YOUR.IP.HERE/32"]  # Your IP address for SSH access
allowed_app_ips = ["0.0.0.0/0"]        # IPs allowed to access dashboard (restrict in prod)

#============================================================================
# Optional Configuration Overrides
#============================================================================

# Project settings
# project_prefix = "customer360"       # Prefix for all resource names

# EC2 instance settings
# instance_type = "r5.xlarge"          # Instance type (4 vCPUs, 32 GB RAM)
# key_pair_name = "customer360-key"    # SSH key pair name
# root_volume_size = 50                # Root volume size in GB
# root_volume_type = "gp3"             # Root volume type

# Data generation settings
# customer_scale = 1000000             # 1M customers (options: 1000000, 10000000, 100000000)